<h1>Enter new album</h1>

<%= render 'shared/errors' %>

<form action="<%= albums_url %>" method="post">
    <%= auth_token %>

    <label for="title">Title</label>
    <input type="text" name="album[title]" id="title">

    <br>

    <label for="year">Year</label>
    <input type="text" name="album[year]" id="year">

    <br>

    <input type="radio" name="album[live]" id="live" value="true">
    <label for="live">Recorded live</label>

    <input type="radio" name="album[live]" id="studio" value="false" checked>
    <label for="studio">Recorded in studio</label>

    <br>

    <label for="band">Band</label>
    <select name="album[band_id]" id="band">
        <% unless @album.band_id %>
        <option disabled selected></option>
        <% end %>
        <% Band.all.each do |band| %>
        <option value="<%= band.id %>" <%= 'selected' if @album.band_id == band.id %>><%= band.name.capitalize %></option>
        <% end %>
    </select>

    <br>

    <input type="submit" value="Submit">
</form>